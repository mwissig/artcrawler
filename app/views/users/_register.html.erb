<%= form_for(@user) do |f| %>
<%= f.email_field :email, placeholder: 'Enter Your Email Address', required: true %>
<%= f.select :primary_use, ["Visitor", "Artist", "Organizer"], required: true %>
<%= f.password_field :password, placeholder: 'Create a Password', required: true %>
<%= f.password_field :password_confirmation, placeholder: 'Confirm Password', required: true %>
<%= f.file_field :avatar %> (note: move avatar field to user profile edit page)
<%= f.submit 'Sign up', id:'submit' %>
<% end %>
